<xp:view xmlns:xp="http://www.ibm.com/xsp/core" xmlns:xc="http://www.ibm.com/xsp/custom"
	xmlns:unp="http://unplugged.teamstudio.com">

	<xp:this.resources>
		<xp:styleSheet href="/unplugged.css"></xp:styleSheet>
	</xp:this.resources>
	<unp:unpHeader search="database" viewsButton="true"
		headerHomeLink="/UnpMain.xsp" title="Calendar">
	</unp:unpHeader>
	<unp:unpNavigatorComputed>
		<unp:this.computedmenuitems><![CDATA[#{javascript:[
        {label: "Calendar", hasSubMenu: false, page: "/UnpDemoCalendar.xsp"}
]}]]></unp:this.computedmenuitems>
	</unp:unpNavigatorComputed>
	<div id="content">
		<div id="contentwrapper">
			<unp:unpScrollableArea>
				<xp:this.facets>
					<unp:unpFormViewer showbuttons="true"
						editxpagewithajax="yes" position="menu-aligned" xp:key="facet_1"
						editxpagename="UnpDemoCalendarEntryEdit.xsp"
						formname="CalendarEntry" title="Calendar Entry">
						<xp:this.facets>
							<xp:panel xp:key="facet_1">
								<ul class="fieldlist">
									<li>
										<xp:label value="Title" id="titlelabel" for="title">
										</xp:label>
										<xp:text id="title" value="#{document1.Title}">
										</xp:text>
									</li>
									<li>
										<xp:label value="Start" id="startlabel" for="start">
										</xp:label>
										<xp:text id="start"
											value="#{document1.StartDate}">
											<xp:this.converter>
												<xp:convertDateTime
													type="both">
												</xp:convertDateTime>
											</xp:this.converter>
										</xp:text>
									</li>
									<li>
										<xp:label value="End" id="endlabel" for="end">
										</xp:label>
										<xp:text id="end"
											value="#{document1.EndDate}">
											<xp:this.converter>
												<xp:convertDateTime
													type="both">
												</xp:convertDateTime>
											</xp:this.converter>
										</xp:text>
									</li>
									<li>
										<xp:text id="body" value="#{document1.Details}" escape="false"
											styleClass="body_richtext">
										</xp:text>
									</li>
								</ul>
							</xp:panel>
						</xp:this.facets>
					</unp:unpFormViewer>
				</xp:this.facets>
			</unp:unpScrollableArea>
		</div>
	</div>
	<unp:unpFooter synctype="alldbs" newDocLoadType="ajax"
		postSyncTarget="/UnpMain.xsp">
	</unp:unpFooter>
</xp:view>
